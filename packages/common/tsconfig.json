{
  "compilerOptions": {
    "target": "ES5",
    "useDefineForClassFields": true,
    "module": "ESNext",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true,
    "moduleResolution": "NodeNext",
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  }
}
