{
  "compilerOptions": {
    "strictPropertyInitialization": false,
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@webcam/common": ["../common/src"],
      "src/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
