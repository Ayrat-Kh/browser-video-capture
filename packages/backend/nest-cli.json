{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": "apps/webcam-backend",
  "projects": {
    "streamer": {
      "type": "application",
      "root": "apps/streamer",
      "entryFile": "./backend/src/main.js",
      "sourceRoot": "apps/streamer/src",
      "compilerOptions": {
        "deleteOutDir": false,
        "webpack": false,
        "tsConfigPath": "apps/streamer/tsconfig.app.json"
      }
    },
    "visualizer": {
      "type": "application",
      "root": "apps/visualizer",
      "entryFile": "main",
      "sourceRoot": "apps/visualizer/src",
      "compilerOptions": {
        "deleteOutDir": false,
        "webpack": false,
        "tsConfigPath": "apps/visualizer/tsconfig.app.json"
      }
    }
  }
}